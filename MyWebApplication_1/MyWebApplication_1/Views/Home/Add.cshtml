@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name=" viewport" content="width=device-width" />
    <title>Добавление темы</title>
</head>
<body>
    <div>
        <h3>Форма добавление темы:</h3>
        <form method="post" action="">
            <input type="hidden" value="@ViewBag.Id" name="Id"/>
            <table style="background-color:bisque; border:1px solid black;">
                <tr>
                    <td><p>Введите имя автора:</p></td>
                    <td><input type="text" name="Author" /></td>
                </tr>
                <tr>
                    <td><p>Введите название темы:</p></td>
                    <td><input type="text" name="ThemeName" /></td>
                </tr>

                <tr><td><input type="submit" value="Добавить тему"/></td></tr>
            </table>
        </form>
        <br />
        <form action="/Home">
            <button>Вернуться к списку тем</button>
        </form>
    </div>
</body>
</html>